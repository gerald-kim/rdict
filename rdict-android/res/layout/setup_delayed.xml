<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/widget28" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	
	<LinearLayout android:id="@+id/widget28"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical">
		
		<TextView android:id="@+id/setup_finished_mesg" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="You've chosen to download the dictionary file later.  RDict will now exit."
			android:layout_centerHorizontal="true"
			android:layout_marginLeft="20px"
			android:layout_marginRight="20px"
			android:layout_marginTop="20px"
			android:layout_marginBottom="10px"
			android:textSize="20sp">
		</TextView>
		
		<TextView android:id="@+id/setup_finished_mesg" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="When you are ready to download the file, restart RDict.  At that time, Setup will ask you to download again."
			android:layout_centerHorizontal="true"
			android:layout_marginLeft="20px"
			android:layout_marginRight="20px"
			android:textSize="20sp">
		</TextView>
		
		
		<Button android:id="@+id/setup_delayed_button" android:layout_width="100px"
			android:layout_height="wrap_content" android:text="Ok"
			android:layout_gravity="right"
			android:layout_marginTop="10px"
			android:layout_marginLeft="20px"
			android:layout_marginRight="20px">
		</Button>
	</LinearLayout>
</ScrollView>