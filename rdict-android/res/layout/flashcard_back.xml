<LinearLayout android:id="@+id/widget31"
	android:layout_width="fill_parent" android:layout_height="200px"
	android:orientation="vertical" android:layout_gravity="center_vertical"
	android:background="@drawable/manage_flashcard"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<com.amplio.rdict.review.ScalableTextView android:id="@+id/back_headword_label"
		android:layout_width="fill_parent" android:layout_height="40px"
		android:height="40px"
		android:text="TextView"
		android:textColor="#000000"
		android:layout_marginTop="5px"
		android:paddingBottom="5px"/>

	<ScrollView android:id="@+id/widget28" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30px" android:layout_marginTop="12px"
		android:layout_marginRight="10px">

		<TextView android:id="@+id/definition_label"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="The definition of the card goes here."
			android:textColor="#000000" android:textSize="16sp"
			android:lines="4">
		</TextView>
	
	</ScrollView>
	
</LinearLayout>