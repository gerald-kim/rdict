<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widget28"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	
	<RelativeLayout android:id="@+id/widget29"
		android:layout_width="wrap_content" android:layout_height="80px">
		
		<TextView android:id="@+id/widget32" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Thank you for downloading RDict."
			android:layout_centerVertical="true"
			android:layout_marginTop="16px"
			android:layout_marginLeft="30px"
			android:layout_marginRight="30px"
			android:textSize="18sp">
		</TextView>
		
	</RelativeLayout>
	
	<RelativeLayout android:id="@+id/widget30"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginTop="20px"
		android:layout_marginBottom="16px">
		
		<TextView android:id="@+id/welcome_view_msg" android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="In the next two steps, we will help you to download a dictionary database and show you how to get help using RDict."
			android:layout_centerHorizontal="true"
			android:layout_marginLeft="30px"
			android:layout_marginRight="30px"
			android:textSize="20sp">
		</TextView>
		
	</RelativeLayout>
	
	<RelativeLayout android:id="@+id/widget31"
		android:layout_width="wrap_content" android:layout_height="60px">
		
		<TextView android:id="@+id/hint_mesg" android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="To begin, press "
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="30px"
			android:layout_marginRight="5px"
			android:textSize="18sp">
		</TextView>
		
		<Button android:id="@+id/welcome_view_ok_button" android:layout_width="80px"
			android:layout_height="wrap_content" android:text="Next"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:layout_toRightOf="@+id/hint_mesg">
		</Button>
		
	</RelativeLayout>
	
</LinearLayout>