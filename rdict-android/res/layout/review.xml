<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/widget28" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

	<TableLayout android:id="@+id/widget50"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical">

		<TextView android:id="@+id/today_label" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="RDict - Review"
			android:textSize="28sp">
		</TextView>

		<LinearLayout android:id="@+id/exercise_layout"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical">
		</LinearLayout>

		<LinearLayout android:id="@+id/widget31"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal">

			<ImageView android:id="@+id/filler_1" android:layout_width="wrap_content"
				android:layout_height="10px" />
				
		</LinearLayout>

		<RelativeLayout android:id="@+id/widget31"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:padding="10px">

			<TextView android:id="@+id/card_count_label"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Card Count: " android:layout_weight="0"
				android:layout_alignParentLeft="true">
			</TextView>
			
			<TextView android:id="@+id/card_count"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="1000 " android:layout_weight="0"
				android:layout_alignParentLeft="true"
				android:layout_below="@+id/card_count_label">
			</TextView>

			<ImageView android:id="@+id/card_count_graph"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_weight="0" android:layout_alignParentRight="true" />
		</RelativeLayout>

		<LinearLayout android:id="@+id/widget31"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal">

			<ImageView android:id="@+id/filler_2" android:layout_width="wrap_content"
				android:layout_height="10px" />
		</LinearLayout>

		<RelativeLayout android:id="@+id/widget31"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:padding="10px">

			<TextView android:id="@+id/grade_label"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Grade: " android:layout_weight="0"
				android:layout_alignParentLeft="true">
			</TextView>
			
			<TextView android:id="@+id/grade"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="3.4 " android:layout_weight="0"
				android:layout_alignParentLeft="true"
				android:layout_below="@+id/grade_label">
			</TextView>

			<ImageView android:id="@+id/grade_graph"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_weight="0" android:layout_alignParentRight="true" />
		</RelativeLayout>



	</TableLayout>
</ScrollView>
